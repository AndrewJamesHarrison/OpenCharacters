@model OpenCharacters.Models.Character

@{
    ViewBag.Title = "Character";
}

@using (Html.BeginForm("Update", "Character", FormMethod.Post, Model))
{

<div>

    <h3>
        @Html.DisplayNameFor(m => m.CharacterName) : @Html.DisplayFor(m => m.CharacterName)
    </h3>

    <br />

    <div class="form-group">
        @Html.EditorFor(m => m.CharacterName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.CharacterName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

</div>

}

